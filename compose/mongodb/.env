# =============================================
# CONFIGURACIÓN DE MONGO DB
# =============================================

# Configuración del contenedor de MongoDB
MONGO_IMAGE_VERSION=mongo:6.0
MONGO_CONTAINER_NAME=mongo
MONGO_PORT=27017
MONGO_DATA_PATH=./mongo_data

# Autenticación de MongoDB
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=secret
MONGO_INITDB_DATABASE=admin

# =============================================
# CONFIGURACIÓN DE MONGO EXPRESS
# =============================================

# Mongo Express Container Settings
MONGO_EXPRESS_IMAGE_VERSION=mongo-express:1.0.2
MONGO_EXPRESS_CONTAINER_NAME=mongo-express
MONGO_EXPRESS_PORT=8081

# Mongo Express Authentication
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=paso

# MongoDB Connection for Express
ME_CONFIG_MONGODB_ADMINUSERNAME=root
ME_CONFIG_MONGODB_ADMINPASSWORD=secret
ME_CONFIG_MONGODB_SERVER=mongo
ME_CONFIG_MONGODB_PORT=27017
ME_CONFIG_MONGODB_ENABLE_ADMIN=true

# =============================================
# RED E INFRAESTRUCTURA
# =============================================
DOCKER_NETWORK_NAME=shared-network

# =============================================
# SEGURIDAD Y CONFIGURACIONES ADICIONALES
# =============================================
# Opcional: Configuración adicional de MongoDB
# MONGO_INITDB_REPLICA_SET=rs0
# MONGO_KEYFILE_PATH=/path/to/keyfile